{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "lf",
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"jsxQuoteStyle": "single",
			"semicolons": "always",
			"quoteStyle": "single",
			"trailingCommas": "all",
			"quoteProperties": "asNeeded",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {}
		},
		"ignore": [".next"]
	}
}
